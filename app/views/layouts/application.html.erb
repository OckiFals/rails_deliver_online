<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!--<title><%= content_for?(:title) ? yield(:title) : 'Delivery Online' %></title>-->
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="navbar" class="navbar navbar-default">
  <nav id="w0" class="navbar-inverse navbar-fixed-top navbar" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#w0-collapse"><span
        class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span></button>
        <a class="navbar-brand" href="/products"><i class="fa fa-rocket"></i> Delivery Online</a>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav ace-nav navbar-right">
          <li class="active">
            <a href="/"><i class="fa fa-fw fa-home"></i> Home</a>
          </li>
          <li class="dropdown grey">
            <a class="dropdown-toggle" href="#" data-toggle="dropdown"><i class="fa fa-fw fa-sitemap">
            </i> Projects <b class="caret"></b>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li>
                <a href="/users"><i class="fa fa-fw fa-user"></i> User</a>
              </li>
              <li>
                <a href="/products" tabindex="-1"><i class="fa fa-fw fa-cloud"></i> Products</a>
              </li>
              <li>
                <a href="/microposts" tabindex="-1"><i class="fa fa-fw fa-cloud"></i> Microposts</a>
              </li>
            </ul>
          </li>
          <li class="purple"><a class="" href="#"><i class="fa fa-fw fa-info-circle"></i> About</a></li>
          <li class="blue"><a class="" href="#"><i class="fa fa-fw fa-envelope"></i> Contact</a></li>

          <li class="light-blue">
            <a class="dropdown-toggle" href="#" data-toggle="dropdown">
              <i class="fa fa-fw fa-unlock"></i> Login
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#"><i class="fa fa-fw fa-unlock"></i> login</a></li>
              <li>
                <a href="#" data-toggle="modal" data-target="#login"><i class="fa fa-fw fa-unlock"></i> Modal</a>
              </li>
              <li><a href="#"><i class="fa fa-fw fa-plus-square"></i> Register</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</div>

<div class="main-content">
  <div class="main-container" id="main-container">
    <div id="main-content-inner">
      <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
          <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a <%= link_to 'Home', products_path %>
          </li>
          <li class="active dropdown">
            <a href="#">
              <i class="fa fa-fw fa-beer"></i> Beer
            </a>
            <a class="dropdown-toggle" href="#" data-toggle="dropdown"><b class="caret"></b></a>
            <ul class="dropdown-menu" role="menu">
              <li>
                <a href="#"><i class="fa fa-fw fa-beer"></i> Brewery</a>
              </li>
            </ul>
          </li>
        </ul>
        <!-- /.breadcrumb -->

        <div class="nav-search" id="nav-search">
          <form class="form-search">
            <span class="input-icon">
              <input type="text" placeholder="Search ..." class="nav-search-input"
                     id="nav-search-input" autocomplete="off"/>
              <i class="ace-icon fa fa-search nav-search-icon"></i>
            </span>
          </form>
        </div>
        <!-- /.nav-search -->
      </div>

      <div class="col-xs-12" style="min-height:480px">
        <div class="page-header">
          <h1><%= content_for?(:page_header) ? yield(:page_header) : 'Products' %></h1>
        </div>

        <%= yield :content %>
        <%= yield %>

      </div>
    </div>
  </div>
</div>
<div class="hr hr-18 hr-double dotted"></div>
</body>

<div class="modal fade" id="login" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
        aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Login</h4>
      </div>
      <div class="modal-body">
        <form action="#" method="POST">
          {% csrf_token %}
          {% if form.errors %}
          <p>Please correct the following field:</p>
          {% endif %}

          <div class="register_div">
            {% if form.username.errors %}<p class="error">{{ form.username.errors }}</p>{% endif %}
            <p><label for="username">Username:</label></p>

            <p> {{ form.username }}</p>
          </div>
          <div class="register_div">
            {% if form.password.errors %}<p class="error">{{ form.password.errors }}</p>{% endif %}
            <p><label for="password">Password:</label></p>

            <p> {{ form.password }}</p>
          </div>
          <div class="input">
            <p>
              <input class="btn btn-success" type="submit" value="Login" alt="login">
              <a href="#" class="btn btn-warning">Sign Up</a>
            </p>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button class="btn btn-sm btn-danger" data-dismiss="modal">
          <i class="ace-icon fa fa-times"></i>
          Close
        </button>
      </div>
    </div>
  </div>
</div>

<%= yield :extra_js %>

<footer class="footer">
  <div class="container">
    <p class="pull-left">&copy; My Company 2015</p>

    <p class="pull-right">Powered by <a href="http://www.djangoproject.com/" target="_blank"
                                        rel="external">Ruby on Rails</a></p>
  </div>
</footer>
</html>


